<h2><%= @wine[:wine] %></h2>
<ul>
  <li><%= @wine[:color] %></li>
  <li>Appelation : <%= @wine[:appelation] %></li>
  <li>Domaine : <%= @wine[:domain] %></li>
  <li>Région : <%= @wine[:region].join(" - ") %></li>
  <li>Cépages : <%= @wine[:grape].join(", ") %></li>
  <% if @wine[:figaro_note] == "" %>
  <li> Note du figaro : - </li>
  <% else %>
  <li>Note du figaro : <%= @wine[:figaro_note] %> / 20</li>
  <% end %>
  <li><%= simple_form_for @wine, :url => save_path, :method => :post do |f| %>
    <%= f.error_notification %>
    <%= f.input :appelation, :as => :hidden, :value => @wine[:appelation] %>
    <%= f.input :domain, :as => :hidden, :value => @wine[:domain] %>
    <%= f.input :year, :as => :hidden, :value => @wine[:year] %>
    <%= f.input :color, :as => :hidden, :value => @wine[:color] %>
    <%= f.input :region, :as => :hidden, :value => @wine[:region] %>
    <%= f.input :wine, :as => :hidden, :value => @wine[:wine] %>
    <%= f.input :figaro_note, :as => :hidden, :value => @wine[:figaro_note] %>
    <%= f.input :grape, :as => :hidden, :value => @wine[:grape] %>
    <%= f.input :stock, required: true, label: "Combien de bouteilles ?" %>

    <div class="form-actions">
      <%= f.button :submit, "Ajouter à ma cave", class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </li>
</ul>
